<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top" >
    
     <ImageView
         android:id="@+id/logo"
         android:layout_width="290dp"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="0dp"
         android:src="@drawable/logo" />

    <Button
        android:id="@+id/btn_selayang_pandang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:background="@null"
        android:text="@string/selayang_pandang" />
    
    <TextView
        
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_selayang_pandang"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/garis" />

    <Button
        android:id="@+id/btn_berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_selayang_pandang"
        android:layout_centerHorizontal="true"
        android:background="@null"
         android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/berita_terbaru" />
    
     <TextView
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_berita"
        android:layout_centerHorizontal="true"
        android:text="@string/garis" />
    
    <Button
        android:id="@+id/btn_sistem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="20dp"
        android:layout_below="@+id/btn_berita"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:text="Sistem Informasi Akademik" />
    
    <TextView
        
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sistem"
        android:layout_centerHorizontal="true"
        android:text="@string/garis" />
    
    <Button
        android:id="@+id/btn_informasi"
        android:layout_width="wrap_content"
         android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sistem"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:text="Informasi Penting" />
    
    <TextView
        
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_informasi"
        android:layout_centerHorizontal="true"
        android:text="@string/garis" />
    
    <Button
        android:id="@+id/btn_hubungi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_informasi"
        android:layout_centerHorizontal="true"
        android:background="@null"
         android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Hubungi Kami" />
    
    <TextView
        
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_hubungi"
        android:layout_centerHorizontal="true"
        android:text="@string/garis" />
    
    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="wrap_content"
         android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_hubungi"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:text="Keluar" />
    
    <TextView
        
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_keluar"
        android:layout_centerHorizontal="true"
        android:text="@string/garis" />
    
    
    
	<FrameLayout 
	    android:id="@+id/footer_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        
	    >

	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	         />

	    <TextView
        android:id="@+id/textView2"
        android:background="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
         />
	    
	     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:text="copyright 2015"
        android:textSize="10dp"
        android:layout_marginTop="32dp"
         />

	     <ImageView
	         android:id="@+id/logoums"
	         android:layout_width="40dp"
	         android:layout_marginRight="20dp"
	         android:layout_height="wrap_content"
	         android:layout_gravity="right"
	         android:src="@drawable/footer_logo" />
	    
	</FrameLayout>

</RelativeLayout>
